<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    >
    <TextView
        android:id="@+id/twKq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0"
        android:textSize="40dp"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30px">
            <Button
                android:id="@+id/so1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="1"
                android:textSize="40dp"
                ></Button>
            <Button
                android:id="@+id/so2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="2"
                android:textSize="40dp"
                ></Button>
            <Button
                android:id="@+id/so3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="3"
                android:textSize="40dp"
                ></Button>
            <Button
                android:background="@color/colorPrimary"
                android:id="@+id/dauCong"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="+"
                android:textSize="40dp"
                ></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/so4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="4"
                android:textSize="40dp"
                ></Button>
            <Button
                android:id="@+id/so5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="5"
                android:textSize="40dp"
                ></Button>
            <Button
                android:id="@+id/so6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="6"
                android:textSize="40dp"
                ></Button>
            <Button
                android:background="@color/colorPrimary"
                android:id="@+id/dauTru"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="-"
                android:textSize="40dp"
                ></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/so7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="7"
                android:textSize="40dp"
                ></Button>
            <Button
                android:id="@+id/so8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="8"
                android:textSize="40dp"
                ></Button>
            <Button
                android:id="@+id/so9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="9"
                android:textSize="40dp"
                ></Button>
            <Button
                android:background="@color/colorPrimary"
                android:id="@+id/dauNhan"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="*"
                android:textSize="40dp"
                ></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/colorPrimary"
                android:id="@+id/cham"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="."
                android:textSize="40dp"
                ></Button>
            <Button

                android:id="@+id/so0"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="0"
                android:textSize="40dp"
                ></Button>
            <Button
                android:layout_marginLeft="5dp"
                android:background="@color/colorPrimary"
                android:id="@+id/dauBang"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="="
                android:textSize="40dp"
                ></Button>
            <Button
                android:layout_marginLeft="5dp"
                android:background="@color/colorPrimary"
                android:id="@+id/dauChia"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="/"
                android:textSize="40dp"
                ></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:background="#ff33"
                android:id="@+id/AC"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:textSize="40dp"
                android:text="AC">

            </Button>
            <Button
                android:layout_marginLeft="5dp"
                android:background="#ff33"
                android:id="@+id/xoa"
                android:layout_width="165dp"
                android:layout_height="100dp"
                android:textSize="40dp"
                android:text="xÃ³a">

            </Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>